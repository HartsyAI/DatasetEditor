@* Displays high-level metadata about the loaded dataset. *@
<MudPaper Class="pa-4" Elevation="0">
    <MudStack Spacing="2">
        <MudText Typo="Typo.h5">Dataset info</MudText>
        <MudText Typo="Typo.body1" Class="mud-text-secondary">
            TODO: Bind to DatasetState.CurrentDataset once loader populates metadata.
        </MudText>

        <MudDivider />

        <MudGrid>
            <MudItem xs="6">
                <MudText Typo="Typo.subtitle2">Name</MudText>
                <MudSkeleton Width="90%" Height="20px" />
            </MudItem>
            <MudItem xs="6">
                <MudText Typo="Typo.subtitle2">Total items</MudText>
                <MudSkeleton Width="50%" Height="20px" />
            </MudItem>
            <MudItem xs="6">
                <MudText Typo="Typo.subtitle2">Created</MudText>
                <MudSkeleton Width="80%" Height="20px" />
            </MudItem>
            <MudItem xs="6">
                <MudText Typo="Typo.subtitle2">Last updated</MudText>
                <MudSkeleton Width="80%" Height="20px" />
            </MudItem>
        </MudGrid>

        <MudDivider />

        <MudText Typo="Typo.subtitle2">Description</MudText>
        <MudSkeleton Width="100%" Height="60px" />
    </MudStack>
</MudPaper>

