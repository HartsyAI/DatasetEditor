@inherits LayoutComponentBase
@implements IDisposable

<MudThemeProvider Theme="@_theme" IsDarkMode="@_isDarkMode" />
<MudDialogProvider />
<MudSnackbarProvider />
<MudPopoverProvider />

<MudLayout>
    <MudDrawer @@bind-Open="@_drawerOpen"
               Elevation="2"
               ClipMode="DrawerClipMode.Always">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">DatasetStudio</MudText>
            <MudSpacer />
            <MudIconButton Icon="@Icons.Material.Filled.ChevronLeft"
                           Color="Color.Inherit"
                           OnClick="@ToggleDrawer"
                           Title="Collapse navigation" />
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>
    
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.False" Class="pa-0" Style="margin-top: 0;">
            @if (!_drawerOpen)
            {
                <MudIconButton Icon="@Icons.Material.Filled.Menu"
                               Color="Color.Default"
                               Class="ma-2"
                               OnClick="@ToggleDrawer"
                               Title="Open navigation" />
            }
            
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

